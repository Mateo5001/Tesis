<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp.Movile.Views.General.Topic"
             Title="Temas"
              BindingContext="{Binding Topic, Source={StaticResource Locator}}">

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Ir a Inicio" Command="{Binding goMain}"></ToolbarItem>
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <StackLayout>
      <Label Text="Seleccionar Materia" VerticalOptions="Center" TextColor="Black" ></Label>
      <Picker Title="--Seleccione" TextColor="Black" SelectedIndex="{Binding IndexMatter}"  ItemsSource="{Binding MatterList}">
      </Picker>
      <Label Text="Nombre Tema" VerticalOptions="Center" TextColor="Black" ></Label>
      <Entry Text="{Binding NomTopic}"></Entry>
      <Label Text="Codigo tema" VerticalOptions="Center" TextColor="Black" ></Label>
      <Entry Text="{Binding CodTopic}"></Entry>
      <Label Text="Estado" VerticalOptions="Center" TextColor="Black" FontSize="25"></Label>
      <Picker SelectedIndex="{Binding IndexEstado}">
        <Picker.Items>
          <x:String>Activo</x:String>
          <x:String>Inactivo</x:String>
        </Picker.Items>
      </Picker>
      <Button Text="Crear Tema" BorderColor="Red" Command="{Binding cmdCrearTopic}" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>