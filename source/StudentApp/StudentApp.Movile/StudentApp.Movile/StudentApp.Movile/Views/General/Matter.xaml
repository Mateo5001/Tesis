<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp.Movile.Views.General.Matter"
             Title="Materias" Style="Italic" 
             BindingContext="{Binding Matter, Source={StaticResource Locator}}">

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="ir a Inicio" Command="{Binding goMain}"></ToolbarItem>
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <StackLayout>
      <Label Text="Nombre Materia" VerticalOptions="Center" TextColor="Black" FontSize="20" FontFamily="Comic Sans MS , verdana " FontAttributes="Italic"></Label>
      <Entry Text="{Binding NomMateria}"></Entry>
      <Label Text="Codigo Materia" VerticalOptions="Center" TextColor="Black" FontSize="20" FontFamily="Comic Sans MS" FontAttributes="Italic" ></Label>
      <Entry Text="{Binding CodMateria}"></Entry>
      <Label Text="Estado" VerticalOptions="Center" TextColor="Black" FontSize="18" FontFamily="Georgia" FontAttributes="Italic"> </Label>
      <Picker SelectedIndex="{Binding IndexEstado}" TextColor="Blue" >
        <Picker.Items>
          <x:String>Activo</x:String>
          <x:String>Inactivo</x:String>
        </Picker.Items>
      </Picker>
      <Button Text="Crear Materia" BorderColor="Red" BackgroundColor="Black" TextColor="White" Command="{Binding cmdCrearMat}"  />
    </StackLayout>
    </ContentPage.Content>
</ContentPage>